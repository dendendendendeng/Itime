<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_color_show"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="选择颜色" />

    <com.example.itime.ColorBar
        android:id="@+id/ColorBar_show"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/textView_color_show"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp">

    </com.example.itime.ColorBar>

    <Button
        android:id="@+id/button_color_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorBar_show"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:background="@color/White"
        android:text="确认"
        android:textColor="@color/myColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_color_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorBar_show"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_toStartOf="@+id/button_color_ok"
        android:layout_toLeftOf="@+id/button_color_ok"
        android:background="@color/White"
        android:text="取消"
        android:textColor="@color/myColor"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>