<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_list_main"
        android:layout_width="76dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/ic_menu_send" />

    <TextView
        android:id="@+id/textView_head_list_main"
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imageView_list_main"
        android:layout_toRightOf="@+id/imageView_list_main"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_sub_list_main"
        android:layout_width="317dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView_left_list_main"
        android:layout_toRightOf="@+id/textView_left_list_main"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView_left_list_main"
        android:layout_width="74dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="15dp" />
</RelativeLayout>
